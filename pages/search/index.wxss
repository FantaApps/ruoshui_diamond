.content {
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: row;
}
.left {
  width: 200rpx;
  flex-shrink: 0;
  border-right: 1rpx solid #eee0c0;
}
.right {
  width: 550rpx;
  height: 1000rpx;
  flex-grow: 1;
}

.category-item {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.category-item-active {
  background-color: #b6b6b6;
}

.goodsWrap-category {
  padding: 30rpx;
}

.goods-item {
  display: flex;
  margin: 20rpx 30rpx;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background-color: #F0EFF9;
  overflow: hidden;
  border-radius: 5px;
}

.goods-pic {
  width: 80px;
  height: 80px;
  flex-shrink: 0;
}

.goods-info {
  display: flex;
  flex-direction: column;
  padding-left: 10rpx;
}
.goodsName {
  font-size: 28rpx;
}
.goodsPrice {
  color:#e64340;
}
.weui-search-bar.searchBar{
  border: none;
  box-shadow: #CCC 0 5rpx 10rpx;
}
.searchBox{
  background: linear-gradient(to right, #D8C3FD, #C9CAFE);
  border-radius: 10rpx;
}
.searchBoxInput{
  color: white;
}
.searchBoxInput_placeholder{
  color: white;
}
.searchBtn{
  color: black;
}
.category-name{
  background: linear-gradient(to right, #8E6CFE, #7181FB);
  border-radius: 30rpx;
  padding: 6px 30rpx;
  font-size: 12px;
  color: white;
  box-shadow: gray 0 0 30rpx;
}

.goods-num{
  position: relative;
  bottom: 50px;
  background-color: #E45B61;
  padding: 15px;
  border-radius: 28px;
  left: 20px;
  box-shadow: #E45B61 0 0 10px;
  width: 50rpx;
}
.goods-num-text{
  position: relative;
  top: 12px;
  right: 6px;
  color: white;
}
.goods-item-product{
  display: flex;
  align-items: center;
  padding: 20rpx;
}