<view class="weui-search-bar searchBar">
   <view class="weui-search-bar__form">
    <view class="weui-search-bar__box searchBox">
      <icon class="weui-icon-search_in-box" color='white' type="search" size="14"></icon>
      <input type="text" class="weui-search-bar__input searchBoxInput" placeholder="请输入搜索内容" placeholder-class='searchBoxInput_placeholder' value="{{wxSearchData}}" bindinput="wxSearchInput" bindconfirm="wxSearchConfirm" />
      <view class="weui-icon-clear" wx:if="{{wxSearchData.value.length > 0}}" bindtap="wxSearchClear">
        <icon type="clear" size="14"></icon>
      </view>
    </view>
  </view>
    <view class="weui-search-bar__cancel-btn searchBtn" bindtap="back">
         <text data-key='back'>搜索</text>
     </view>
</view>

<view class="page">
  <view class="page__bd">
    <view class='content'>
<scroll-view class='right' scroll-y="true" scroll-into-view="{{goodsToView}}" bindscroll="scroll">
        <block wx:for="{{goodsWrap}}" wx:key="id">

          <view class="goodsWrap-category" id='{{item.scrollId}}'>
            <text class='category-name'>{{item.name}}</text>
          </view>

          <block wx:for="{{item.goods}}" wx:for-item="goods" wx:for-index='idx' wx:key="id">
            <view class='goods-item' bindtap="toDetailsTap" data-id="{{goods.id}}">
              <view class='goods-item-product'>
                <image class='goods-pic' mode='aspectFill' lazy-load="true" src="{{goods.pic}}_m"></image>
                <view class='goods-info'>
                  <text class='goodsName'>{{goods.name}}</text>
                  <text class='goodsPrice'>￥{{goods.minPrice}}</text>
                </view>
              </view>
              <view class='goods-num'>
                <view class='goods-num-text'>{{idx+1}}</view>
              </view>
            </view>
          </block>
        </block>
      </scroll-view>
    </view>
  </view>
</view>