<view class="page">
  <view class="page__bd">
    <view class="swiper-container">
      <swiper class="swiper_box" autoplay="true" bindchange="swiperchange">
        <block wx:for="{{bannerList}}" wx:key="*this">
          <swiper-item>
            <image bindtap="tapBanner" data-id="{{item.businessId}}" src="{{item.picUrl}}" />
          </swiper-item>
        </block>
      </swiper>
      <view class="dots">
        <block wx:for="{{bannerList}}" wx:key="*this">
          <view class="dot{{index == swiperCurrent ? ' active' : ''}}"></view>
        </block>
      </view>
    </view>
    <block wx:for="{{shopSubList}}">
      <view class="shopTitle">{{item.name}}</view>
      <view class="shopInfo">
        <view class="shopInfoItem shopInfoLocation" data-id="{{item.id}}" bindtap='goMap'>
          <view class="itemName">
            <image class='itemImage' src="/images/icon/location.png"></image>
            <view>{{ item.address }}</view>
          </view>
          <view class="itemText">
            <image class='itemSmallImage' src="/images/icon/purple.png"></image>
            <view>地图</view>
          </view>
        </view>
        <view class="shopInfoItem">
          <view class="itemName">
            <image class='itemImage' src="/images/icon/time.png"></image>
            <view>营业时间</view>
          </view>
          
          <view class="itemText">
            <image class='itemSmallImage' src="/images/icon/blue.png"></image>
            <view>{{ item.openingHours }}</view>
          </view>
        </view>
        <view class="shopInfoItem">
          <view class="itemName">
            <image class='itemImage' src="/images/icon/tel.png"></image>
            <view>联系电话</view>
          </view>
          
          <view class="itemText" data-tel="{{item.linkPhone}}" bindtap='callPhone'>
            <image class='itemSmallImage' src="/images/icon/yellow.png"></image>
            <view>{{ item.linkPhone }}</view>
          </view>
        </view>
        <!-- <navigator url="" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
          <view class="weui-cell__hd">
            <image src="{{icon}}" style="margin-right: 5px;vertical-align: middle;width:20px; height: 20px;"></image>
          </view>
          <view class="weui-cell__bd">cell standard</view>
          <view class="weui-cell__ft weui-cell__ft_in-access">说明文字</view>
        </navigator> -->
      </view>
    </block>
    <view class='recommend-title'>店家推荐</view>
    <view class="goods-container" wx:if="{{goodsRecommend.length > 0}}">
      <view class="goods-box" wx:for-items="{{goodsRecommend}}" wx:key="*this" bindtap="toDetailsTap" data-id="{{item.id}}">
        <view class="img-box">
          <image src="{{item.pic}}_m" class="image" mode="aspectFill" lazy-load="true" />
        </view>
        <view class="goods-title">{{item.name}}</view>
        <view class="goods-price">¥ {{item.minPrice}}</view>
      </view>
    </view>
  </view>
  <view class='page__ft'>
    
  </view>
</view>